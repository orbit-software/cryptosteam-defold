- name: portalsdk
  type: table
  desc: Functions and constants for interacting with Portal SDK APIs

  members:

#*****************************************************************************************************

  - name: game_ready
    type: function
    desc: Send event what game is loaded and ready. Required.








#*****************************************************************************************************

  - name: is_ad_enabled
    type: function
    desc: Checks if advertisements are enabled.
    
    parameters:
    - name: callback
      type: function
      
      parameters:
      - name: self
        type: table
      - name: data
        type: boolean
        desc: True if ads are enabled; otherwise, false.
        
#*****************************************************************************************************

  - name: request_ad
    type: function
    desc: Requests an advertisement to be shown.

    parameters:
    - name: callback
      type: function
      
      parameters:
      - name: self
        type: table
      - name: success
        type: boolean
        desc: always true

#*****************************************************************************************************

  - name: request_reward_ad
    type: function
    desc: Requests an reward advertisement to be shown.
    parameters:
    - name: callback
      type: function
      
      parameters:
      - name: self
        type: table
      - name: success
        type: boolean

#*****************************************************************************************************

  - name: is_ad_running
    type: function
    desc: Checks if an advertisement is currently running.

    return:
    - name: value
      type: boolean
      desc: True if an ad is running; otherwise, false

#*****************************************************************************************************

  - name: reload_ad
    type: function
    desc: Reload active advertisement










#*****************************************************************************************************

  - name: get_version
    type: function
    desc: Retrieves the version of the SDK.

    return:
    - name: value
      type: string
      desc: The version string









#*****************************************************************************************************

  - name: get_config
    type: function
    desc: Retrieves the configuration for loaded game
    
    parameters:
    - name: callback
      type: function
      
      parameters:
      - name: self
        type: table
      - name: data
        type: table
        fields:
          - name: supported_screen_formats
            type: enum
              - `portrait`
              - `landscape`
    
          - name: supported_devices
            type: enum
              - `mobile`
              - `mobile`
              - `desktop`
      examples:
      - desc: |-
                ```lua
                -- Return from callback:
                {["supported_screen_formats"]={"portrait","landscape"},["supported_devices"]={"mobile","tablet","desktop"}
                ```


#*****************************************************************************************************

  - name: get_locale
    type: function

    return:
    - name: result
      type: string











